<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:elevation="5dp"
    android:background="@null"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="@color/colorLightGrey"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sampling Distribution Notes"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:id="@+id/fileTitle"
            android:layout_toLeftOf="@id/btnDownload"
            android:minLines="2"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/fileTitle"
            android:padding="5dp"
            android:id="@+id/subjectName"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            android:textSize="15sp"
            android:backgroundTint="@color/colorLightGrey"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/rounded_button"
            android:layout_height="wrap_content"
            android:text="\tProbability and Statistics\t" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/fileTitle"
            android:layout_toRightOf="@id/subjectName"
            android:padding="5dp"
            android:id="@+id/unitNumber"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:textSize="15sp"
            android:textStyle="normal"
            android:backgroundTint="@color/colorLightGrey"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/rounded_button"
            android:layout_height="wrap_content"
            android:text="\tUnit-1\t\t" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download\t"
            android:drawableTint="@color/colorWhite"
            android:padding="5dp"
            android:id="@+id/btnDownload"
            android:textSize="16sp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:background="@drawable/rounded_button"
            android:drawablePadding="3dp"
            android:layout_centerHorizontal="true"
            android:drawableStart="@drawable/ic_baseline_arrow_downward_24"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/horizontalDivider"
            android:layout_below="@id/subjectName"
            android:background="@color/colorLightPrimary"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted by Saikiran Kopparthi"
            android:layout_margin="10dp"
            android:textSize="12sp"
            android:id="@+id/studentName"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/horizontalDivider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1st Nov 2020, 8.00pm"
            android:id="@+id/dateOfPublishing"
            android:layout_margin="10dp"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/horizontalDivider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtInvisibleURL"
            android:visibility="gone" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>